{% extends 'base.html.twig' %}

{% block title %}SymphArt Articles{% endblock %}

{% block body %}
	<h1>Articles</h1>

	{% if articles %}
		<table id="table_list_articles" class="table table-striped">
			<thead>
				<tr>
					<th scope="col" class="w-50">Article Title</th>
					<th scope="col" >Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article.title }}</td>
						<td>
							<a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
							<a href="/article/edit/{{ article.id }}" class="btn btn-secondary">Edit</a>
							<a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<div class="alert alert-info" role="alert">
			No articles to display!
		</div>
	{% endif %}

{% endblock %}

{% block javascripts %}
	<script src="/js/main.js"></script>
{% endblock javascripts %}