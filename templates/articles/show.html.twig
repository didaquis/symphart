{% block title %}SymphArt Articles{% endblock %}

{% block body %}

	{% if article %}
		<h1>{{article.title}}</h1>
		<p>{{article.body}}</p>
	{% else %}
		<div class="alert alert-danger" role="alert">
			Article not found!
		</div>
	{% endif %}
		<hr>
		<a href="/article" class="btn btn-dark">Go Back</a>

{% endblock %}